{% extends 'base.html.twig' %}

{% block title %}Liste des événements{% endblock %}

{% block body %}
    <h1>All events!</h1>
    <ul>
        {% for event in events %}
            <li>
                <a href="{{ path('event_read', {'id': wish.id}) }}">
                    {{ event.thumbnail }}
                        {{ event.title }}{{ event.location_adress }}
                    {{ event.location_name }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}